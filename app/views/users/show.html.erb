<h1>Welcome, <%= @user.username %>!</h1>

<h3>Your horses</h3>
<%= link_to 'Add New Horse', new_user_horse_path(@user) %>

<% @user.horses.each do |horse| %>
  <h4><%= horse.name %></h4>
  <p><%= horse.breed %></p>
  <p>Age <%= horse.age %></p>
  <%= link_to 'Edit', edit_horse_path(horse) %> | <%= link_to 'Delete', horse_path(horse), method: :delete %>
<% end %>
