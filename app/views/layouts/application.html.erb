<!DOCTYPE html>
<html>
  <head>
    <title>Horses</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to "#{current_user.username}", user_path(current_user) %> | <%= link_to 'Logout', session_path(current_user), method: :delete %>
    <% else %>
      <%= link_to 'Login', new_session_path %> | <%= link_to 'Signup', new_user_path %>
    <% end %>
     | <%= link_to 'Home', root_path %>
    <%= yield %>
  </body>
</html>
